<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      x:TypeArguments="viewModels:PlaceCharacterViewModel"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                      xmlns:viewModels="clr-namespace:RetroGamesGo.Core.ViewModels;assembly=RetroGamesGo.Core"
                      xmlns:controls="clr-namespace:RetroGamesGo.Core.Controls;assembly=RetroGamesGo.Core"
                      x:Class="RetroGamesGo.Droid.Pages.PlaceCharacterPage">
    <views:MvxContentPage.Content>
        <controls:ArCharacterView  VerticalOptions="FillAndExpand" Character="{Binding Character}"/>
    </views:MvxContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary"  Text="Mario" Priority="0" />
        <ToolbarItem Order="Secondary"  Text="PacMan" Priority="1" />
        <ToolbarItem Order="Secondary"  Text="Sonic" Priority="1" />
        <ToolbarItem Order="Secondary"  Text="Space Invader" Priority="1" />
        <ToolbarItem Order="Secondary"  Text="Donkey Kong" Priority="1" />
    </ContentPage.ToolbarItems>

</views:MvxContentPage>