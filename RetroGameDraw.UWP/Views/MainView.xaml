        <GridView Grid.Row="2" ItemsSource="{Binding Users}" HorizontalAlignment="Center" SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="240" Width="240" Background="Gray" Margin="16" >
                        <StackPanel Height="238" Width="238" Orientation="Vertical" Spacing="16" Background="Black" Margin="0,1,0,0">

                            <TextBlock Margin="0,66,0,0" Text="{Binding Name}" Foreground="#F8B82F" FontWeight="Bold" 
                                       FontSize="26" TextWrapping="WrapWholeWords" HorizontalTextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Karmatic Arcade">
                                
                            </TextBlock>
                            <TextBlock Margin="12,0,0,0" Width="400" Text="{Binding Document}" 
                                       HorizontalTextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Margin="12,0,0,0" Width="400" Text="{Binding Country}" 
                                       HorizontalTextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <ProgressRing Grid.Row="2" IsActive="{Binding IsBusy, Mode=TwoWay}" Height="160" Width="160" Foreground="#F8B82F"/>

        <StackPanel Grid.Row="3" Margin="0,16,0,0">
